@using BTL_ASP.Models;
@model List<Hang>

<h4 class="m-text14 p-b-32">
    Sản Phẩm Mới
</h4>
@{
    foreach (var item in Model)
    {
        <div>
            <div class="col-sm-12 p-b-50">
                <!-- Block2 -->
                <div class="block2">
                    <div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelnew">
                        
                        @*<img src="@Url.Content("~/images/products/"+item.HangImage)" alt="Hinh anh" />*@
                        <img src="@Url.Content(item.HangImage)" alt="Hinh anh" />
                        <div class="block2-overlay trans-0-4">
                            <a href="#" class="block2-btn-addwishlist hov-pointer trans-0-4">
                                <i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
                                <i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>

                    <div class="block2-txt p-t-20">
                        <a href="@Url.Action("XemChiTiet",new { @hangID=item.HangID})" class="block2-name dis-block s-text3 p-b-5">
                            @item.HangName
                        </a>

                        <span class="block2-price m-text6 p-r-5" style="color:brown">
                            @item.DonGia
                        </span>
                    </div>
                </div>
            </div>

        </div>
    }

}
